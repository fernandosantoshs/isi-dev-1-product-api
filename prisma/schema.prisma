generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                          Int                           @id @default(autoincrement())
  name                        String
  description                 String?
  price                       Decimal
  stock                       Int
  created_at                  DateTime                      @default(now())
  updated_at                  DateTime?
  deleted_at                  DateTime?
  Product_coupon_applications Product_coupon_applications[]

  @@map("products")
}

enum CouponType {
  PERCENT
  FIXED
}

model Coupon {
  id                          Int                           @id @default(autoincrement())
  code                        String                        @unique
  type                        CouponType
  value                       Decimal
  one_shot                    Boolean
  max_uses                    Int
  uses_count                  Int
  valid_from                  DateTime
  valid_until                 DateTime
  created_at                  DateTime                      @default(now())
  updated_at                  DateTime?
  deleted_at                  DateTime?
  Product_coupon_applications Product_coupon_applications[]

  @@map("coupons")
}

model Product_coupon_applications {
  id         Int       @id @default(autoincrement())
  product    Product   @relation(fields: [product_id], references: [id])
  product_id Int
  coupon     Coupon    @relation(fields: [coupon_id], references: [id])
  coupon_id  Int
  applied_at DateTime  @default(now())
  removed_at DateTime?

  @@map("product_coupon_applications")
}
